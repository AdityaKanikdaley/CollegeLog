<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".timeTable_Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="30dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/timeHead"
                android:layout_width="wrap_content"
                android:layout_height="118dp"
                android:layout_gravity="center"
                android:text="TimeTable\n\t\t\t\tInputs"
                android:textColor="#FFEB3B"

                android:textSize="40dp" />
            <TextView
                android:layout_width="40dp"
                android:layout_height="100dp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/clock" />
            <!--            <TextView-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="40dp" />-->
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <EditText
            android:id="@+id/edit1"
            android:layout_height="35dp"
            android:layout_width="300dp"
            android:inputType="text"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/edit"
            android:textColor="@color/black"
            android:hint="Enter   Course   Name"
            android:textColorHint="@color/endcolor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="#FFFFFF">

            <Spinner
                android:id="@+id/spinner_1"
                android:dropDownSelector="#000000"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:spinnerMode="dialog"
                android:backgroundTint="#000000"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="#FFFFFF">

            <Spinner
                android:id="@+id/spinner_2"
                android:dropDownSelector="#000000"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:spinnerMode="dialog"
                android:backgroundTint="#000000"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="#FFFFFF">

            <Spinner
                android:id="@+id/spinner_3"
                android:dropDownSelector="#000000"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:spinnerMode="dialog"
                android:backgroundTint="#000000"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp" />
        <Button
            android:id="@+id/button_one"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/gradient"
            android:text="SUBMIT"
            android:textSize="20dp"
            android:textColor="#F2FA04"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/button_two"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/gradient"
            android:text="TIME TABLE"
            android:textSize="20dp"
            android:textColor="#F2FA04"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
</ScrollView>